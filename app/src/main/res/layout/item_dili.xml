<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="5dp">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/id_form_msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#bebebe"
        android:text="2012-12-12 12:12:12"
        android:textColor="#f5f5f5"
        android:textSize="12sp" />
    <ImageView
        android:layout_below="@id/id_form_msg_date"
        android:id="@+id/item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/n1"
        android:layout_above="@+id/recorder_time"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

    <FrameLayout
        android:layout_below="@id/id_form_msg_date"
        android:id="@+id/recorder_length"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_toLeftOf="@id/item_icon"
        android:background="@drawable/chatto_bg_focused" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ditu"/>

    </FrameLayout>
<TextView
    android:id="@+id/weizhi"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/recorder_length"
    android:layout_width="match_parent"
    android:textColor="#000000"
    android:gravity="right"
    android:text=""
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/recorder_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/recorder_length"
        android:text=""
        android:textColor="#ef0a0a"/>

</RelativeLayout>